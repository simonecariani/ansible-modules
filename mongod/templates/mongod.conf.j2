systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log


storage:
  dbPath: {{ mongod_dbpath|default('/var/lib/mongo') }}
  journal:
    enabled: true


processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid  


net:
  port: {{ mongod_port|default(27017) }}
  bindIp: 0.0.0.0 


security:
  keyFile: /etc/mongo-keyfile


replication:
  replSetName: {{ mongod_replicaset }}

